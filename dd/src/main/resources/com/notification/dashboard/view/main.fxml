<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.notification.dashboard.controller.MainController"
            prefHeight="768.0" prefWidth="1024.0" stylesheets="@../../../../css/login.css">

    <top>
        <VBox>
            <MenuBar>
                <Menu text="File">
                    <MenuItem text="Settings" onAction="#openSettings"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Logout" onAction="#handleLogout"/>
                </Menu>
                <Menu text="Actions">
                    <MenuItem text="Send Test Email" onAction="#sendTestEmail"/>
                    <MenuItem text="Send Test SMS" onAction="#sendTestSMS"/>
                    <MenuItem text="Refresh Notifications" onAction="#refreshNotifications"/>
                </Menu>
                <Menu text="Help">
                    <MenuItem text="About" onAction="#showAbout"/>
                </Menu>
            </MenuBar>
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f0f0f0;">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Label fx:id="welcomeLabel" text="Welcome, User" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="userRoleLabel" text="ADMIN" style="-fx-background-color: #A9A9A9; -fx-text-fill: white;">
                    <padding>
                        <Insets top="5" right="5" bottom="5" left="5"/>
                    </padding>
                </Label>
            </HBox>
        </VBox>
    </top>

    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
            <Tab text="Dashboard">
                <VBox spacing="15">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <Label fx:id="userGreetingLabel" style="-fx-font-size: 14px;"/>
                    <HBox spacing="20">
                        <VBox style="-fx-background-color: #e0e0e0;">
                            <padding>
                                <Insets top="15" right="15" bottom="15" left="15"/>
                            </padding>
                            <Label text="Total Users"/>
                            <Label fx:id="totalUsersLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                        </VBox>
                        <VBox style="-fx-background-color: #e0e0e0;">
                            <padding>
                                <Insets top="15" right="15" bottom="15" left="15"/>
                            </padding>
                            <Label text="Notifications Today"/>
                            <Label fx:id="notificationsTodayLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                        </VBox>
                        <VBox style="-fx-background-color: #e0e0e0;">
                            <padding>
                                <Insets top="15" right="15" bottom="15" left="15"/>
                            </padding>
                            <Label text="Success Rate"/>
                            <Label fx:id="successRateLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                        </VBox>
                    </HBox>
                    <Label text="Recent Notifications" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <TableView fx:id="recentNotificationsTable">
                        <columns>
                            <TableColumn fx:id="timeColumn" text="Time"/>
                            <TableColumn fx:id="titleColumn" text="Title" prefWidth="200"/>
                            <TableColumn fx:id="channelColumn" text="Channel"/>
                            <TableColumn fx:id="statusColumn" text="Status"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            <Tab text="My Notifications">
                <VBox spacing="10">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <TableView fx:id="notificationsTable">
                        <columns>
                            <TableColumn fx:id="idColumn" text="ID"/>
                            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
                            <TableColumn fx:id="notificationTitleColumn" text="Title" prefWidth="200"/>
                            <TableColumn fx:id="messageColumn" text="Message" prefWidth="300"/>
                            <TableColumn fx:id="notificationChannelColumn" text="Channel"/>
                            <TableColumn fx:id="notificationStatusColumn" text="Status"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            <Tab fx:id="sendNotificationTab" text="Send Notification">
                <VBox spacing="15">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <Label text="Create and Send a New Notification" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <HBox spacing="10">
                        <Label text="Recipient:"/>
                        <RadioButton fx:id="allUsersRadio" text="All Users" selected="true">
                            <toggleGroup>
                                <ToggleGroup fx:id="recipientGroup"/>
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="adminsOnlyRadio" text="Admins Only" toggleGroup="$recipientGroup"/>
                        <RadioButton fx:id="specificUserRadio" text="Specific User" toggleGroup="$recipientGroup"/>
                    </HBox>
                    <TextField fx:id="notificationTitleField" promptText="Notification Title"/>
                    <TextArea fx:id="notificationMessageField" promptText="Notification Message" prefRowCount="10"/>
                    <HBox spacing="10">
                        <Label text="Channels:"/>
                        <CheckBox fx:id="emailCheckbox" text="Email"/>
                        <CheckBox fx:id="smsCheckbox" text="SMS"/>
                        <CheckBox fx:id="pushCheckbox" text="Push"/>
                    </HBox>
                    <Button text="Send Notification" onAction="#sendNotification"/>
                    <Label fx:id="sendStatusLabel"/>
                </VBox>
            </Tab>
        </TabPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5"/>
            </padding>
            <Label fx:id="statusLabel" text="Status: Ready"/>
        </HBox>
    </bottom>
</BorderPane>